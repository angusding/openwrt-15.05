
config system
	option hostname 'CRWsRouter'
	option zonename 'Asia/Shanghai'
	option timezone 'CST-8'
	option conloglevel '8'
	option cronloglevel '8'

config timeserver 'ntp'
	list server '0.openwrt.pool.ntp.org'
	list server '1.openwrt.pool.ntp.org'
	list server '2.openwrt.pool.ntp.org'
	list server '3.openwrt.pool.ntp.org'
	option enabled '1'

config led 'led_power'
	option name 'power'
	option sysfs 'lenovo:blue:power'
	option default '1'
	option trigger 'none'

config led 'led_usb'
	option name 'USB'
	option sysfs 'lenovo:blue:usb'
	option interval '50'
	option default '0'
	option trigger 'none'

config led 'led_wifi_led'
	option name 'wifi'
	option sysfs 'lenovo:blue:wifi'
	option default '0'
	option trigger 'netdev'
	option dev 'wlan1'
	option mode 'link tx rx'

config led 'led_wifi_5g_led'
	option name 'wifi 5g'
	option sysfs 'lenovo:blue:wifi5g'
	option default '0'
	option trigger 'netdev'
	option dev 'wlan0'
	option mode 'link tx rx'

config led 'led_lan_led'
	option name 'lan'
	option sysfs 'lenovo:blue:lan'
	option default '0'
	option trigger 'netdev'
	option dev 'eth0.1'
	option mode 'link tx rx'

config led 'led_internet_led'
	option name 'internet'
	option sysfs 'lenovo:blue:internet'
	option default '0'
	option trigger 'netdev'
	option dev 'eth0.2'
	option mode 'tx rx'
